<div class="row">
  <div class="col-md-4 offset-md-4">

    {{#if error}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{error}}
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    {{/if}}

    <div class="card bg-dark text-light">
      <div class="card-body p-4">
        <h3 class="text-light h1">Crear cuenta</h3>
        <form action="/auth/signup" method="POST">
          <div class="mb-3">
            <label for="email">Ingresa tu correo:</label>
            <input
              type="email"
              aria-describedby="emailHelp"
              name="email"
              class="form-control bg-dark text-light border border-success"
              placeholder="ejemplocorreo@dominio.com"
              
              autofocus
            />
            <!--input type="email" class="form-control" id="exampleInputEmail1" -->
          </div>
          <div class="mb-3">
            <label for="password">Ingresa tu contrase単a:</label>
            <input
              type="password"
              name="password"
              class="form-control bg-dark text-light border border-success"
              placeholder="Contrase単a"
            />
          </div>
          <!--div class="mb-3">
            <label for="confirm-password">Repite tu Contrase単a:</label>
            <input
              type="password"
              name="confirm-password"
              class="form-control bg-dark text-light border border-warning"
              placeholder="Confirma la contrase単a"
            />
          </div-->
          <button class="btn btn-warning btn-block">
            Crear cuenta
          </button>
        </form>
      </div>
    </div>
    <p class="my-3">Ya tienes una cuenta
      <a href="/auth/signin" class="text-warning">Ingresar</a></p>
  </div>
</div>