<div class="card bg-dark text-white">

  <div class="card-header d-flex align-items-center">
    <span class="material-icons me-2">
    </span>
    Agrega ya un seguro!
  </div>

  {{! IMAGE UPLOAD FORM }}
  <div class="card-body p-5">
    <form action="/images" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <input
          type="file"
          name="image"
          class="form-control text-dark border-wargning"
          required
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          name="title"
          class="form-control bg-dark text-white border border-warning"
          placeholder="Añade un titulo para la imagen"
          required
        />
      </div>

      <div class="mb-3">
        <textarea
          name="description"
          rows="2"
          class="form-control bg-dark text-white border border-warning"
          placeholder="Añade una descripcion"
          required
        ></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-warning">
          <i class="fa fa-upload"></i>
          Publicar
        </button>
      </div>

    </form>
  </div>
</div>

<div class="card mt-2 bg-dark text-white">
  <div class="card-header d-flex align-items-center">
    <span class="material-icons me-2">
      
    </span>
    Recientemente subidos
  </div>
  <div class="card-body p-5">
    <div class="row">
      {{#each images}}
        <div class="col-md-4 text-center">
          <a href="/images/{{uniqueId}}">
            <img
              src="/uploads/{{filename}}"
              alt="{{title}}"
              class="w-100 h-100"
              style="object-fit: cover; "
            />
            <br>
        

            <div class="badge bg-primary text-wrap" style="width: 6rem;">
              {{title}}
            </div>
            
          </a>
            
        </div>
      {{else}}
        <div class="text-light text-center p-5">
          <h1 class="text-light">Sin publicaciones que mostrar <strong>aún</strong></h1>
          <p>Aqui se veran los seguros que publiques</p>
          <!--span class="material-icons" style="font-size: 7rem;">
            Agrega foto
          </span-->
        </div>
      {{/each}}
    </div>
    
  </div>
</div>