<div class="row">

  <div class="overlay float-start" id="overlay" >
      <div class="popup" id="popup">
        <a href="/" id="btn-cerrar-popup" class="btn-cerrar-popup"><i class="fas fa-times"></i>Cerrar</a>
        <br>
        <h3>Mandanos un mensaje</h3>
        <h4>y podremos ayudarte</h4>
        <form action="https://formsubmit.co/gpssecures@gmail.com" method="POST" />

        <div class="contenedor-inputs">
          <input type="text" placeholder="Nombre" name="nombre">
          <input type="email" placeholder="Correo" name="correo">

          
          <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="A quien representas"
            name="Tipo de persona">
          <datalist id="datalistOptions">
            <option value="Persona común">
            <option value="Empresa">
            <option value="Gerente">
          </datalist>

          <textarea class="contenedor-inputs " rows="5" cols="68" placeholder="Por favor, escribe aqui tu mensaje" name="mensaje"></textarea>
        </div>
        <input type="submit" class="btn btn-warning" value="Enviar">

        </form>
      </div>
    </div>

  <div class="col-md-4 offset-md-4">

    {{#if success}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{success}}
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    {{/if}}

    <div class="card bg-dark text-white">
      <div class="card-body p-4">
        <h1 class="text-light">Iniciar Sesion</h1>
        <form action="/auth/signin" method="POST">
          <div class="mb-3">
            <label for="email">Ingresa tu correo:</label>
            <input
             type="email"
              aria-describedby="emailHelp"
              
              name="email"
              class="form-control"
              placeholder="ejemplocorreo@dominio.com"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="password">Ingresa tu contraseña:</label>
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="Contraseña"
            />
          </div>
          <button class="btn btn-warning btn-block">
            Ingresar
          </button>
        </form>

      </div>

    </div>

    <!--div class="text-light">
      <p class="my-3">Aun no tienes una cuenta? - 
        <a href="/auth/signup" class="text-warning">Crea una!</a></p>
      <!--p class="my-3">Perdiste tu contraseña?
        <a href="/auth/recovery-password" class="text-success">Reestablecer contraseña</a></p>
      
    </div-->
  </div>
</div>